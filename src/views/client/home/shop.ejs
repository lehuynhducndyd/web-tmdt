/* Định nghĩa màu sắc thương hiệu */
:root {
    --primary-color: #007bff; /* Xanh dương (Blue) */
    --secondary-color: #6c757d; /* Xám */
    --accent-color: #dc3545; /* Đỏ (cho khuyến mãi) */
