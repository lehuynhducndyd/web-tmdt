}

/* Cấu trúc cơ bản */
.main-content {
    padding-bottom: 50px;
}

/* Đổi tên .container thành .main-container */
.main-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
    padding-top: 90px;
    padding-bottom: 50px;
}

.text-center {
