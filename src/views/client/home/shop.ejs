    display: none;
    /* Ẩn h2 cũ đi để sử dụng .section-title */
}

.section-title {
    text-align: center;
    margin-bottom: 40px;
    font-size: 2.2rem;
    color: #333;
    border-bottom: 2px solid var(--primary-color);
    display: block;
    /* SỬA LỖI: Hiển thị block để căn giữa dễ hơn */
    padding-bottom: 5px;
    width: fit-content;
    /* SỬA LỖI: Chiều rộng vừa với nội dung */
    margin: 0 auto 40px auto;
    /* SỬA LỖI: Căn giữa tiêu đề */
}


/* Các Button */
.btn {
    display: inline-block;
    padding: 10px 25px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s, transform 0.2s;
    cursor: pointer;
    border: none;
    text-transform: uppercase;
}

.btn-primary {
    background-color: var(--primary-color);
    color: white;
}

.btn-primary:hover {
    background-color: #0056b3;
    transform: translateY(-2px);
}

.btn-secondary {
    background-color: var(--secondary-color);
    color: white;
    padding: 8px 15px;
    font-size: 0.9rem;
}

.btn-secondary:hover {
    background-color: #5a6268;
}

.btn-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: normal;
}

