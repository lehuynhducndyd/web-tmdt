                    class="fa fa-arrow-up"></i></a>


            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="client/lib/easing/easing.min.js"></script>
            <script src="client/lib/waypoints/waypoints.min.js"></script>
            <script src="client/lib/lightbox/js/lightbox.min.js"></script>
            <script src="client/lib/owlcarousel/owl.carousel.min.js"></script>

            <!-- noUiSlider JS -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.7.1/nouislider.min.js"></script>

            <script src="/client/js/main.js"></script>
            <script>
                // JavaScript để mở/đóng modal
                document.addEventListener('DOMContentLoaded', function () {
                    const filterBtn = document.getElementById('openFilterModalBtn');
                    const filterModal = document.getElementById('filterModal');
                    const closeBtn = filterModal.querySelector('.close-btn');

                    if (filterBtn) {
                        filterBtn.addEventListener('click', function () {
                            filterModal.style.display = 'block';
                        });
                    }

                    if (closeBtn) {
                        closeBtn.addEventListener('click', function () {
                            filterModal.style.display = 'none';
                        });
                    }

                    // Đóng modal khi click ra ngoài
                    window.addEventListener('click', function (event) {
                        if (event.target == filterModal) {
                            filterModal.style.display = 'none';
                        }
                    });

                    // Thêm class 'selected' khi click vào nút option
                    document.querySelectorAll('.option-btn').forEach(button => {
                        button.addEventListener('click', function () {
                            // Nếu bạn muốn chỉ chọn 1 option trong mỗi nhóm, uncomment đoạn dưới
                            // this.closest('.filter-group-item').querySelectorAll('.option-btn').forEach(btn => btn.classList.remove('selected'));
                            this.classList.toggle('selected');
                        });
                    });

                    // Price Range Slider
                    const priceSlider = document.querySelector('.slider-range');
                    const minPriceInput = document.querySelector('.price-inputs input[type="text"]:first-of-type');
                    const maxPriceInput = document.querySelector('.price-inputs input[type="text"]:last-of-type');

                    if (priceSlider && minPriceInput && maxPriceInput) {
                        noUiSlider.create(priceSlider, {
                            start: [0, 64000000],
                            connect: true,
                            step: 500000,
                            range: {
                                'min': 0,
                                'max': 64000000
                            },
                            format: {
                                to: function (value) {
                                    return Math.round(value);
                                },
                                from: function (value) {
                                    return Number(value.replace(/\./g, ''));
                                }
                            }
                        });

                        priceSlider.noUiSlider.on('update', function (values, handle) {
                            const value = values[handle];
                            if (handle === 0) {
                                minPriceInput.value = value.toLocaleString('vi-VN');
                            } else {
                                maxPriceInput.value = value.toLocaleString('vi-VN');
                            }
                        });

                        minPriceInput.addEventListener('change', function () {
                            priceSlider.noUiSlider.set([this.value.replace(/\./g, ''), null]);
                        });

                        maxPriceInput.addEventListener('change', function () {
                            priceSlider.noUiSlider.set([null, this.value.replace(/\./g, '')]);
                        });
                    }
                });

                document.addEventListener('DOMContentLoaded', function () {
                    const applyFilterBtn = document.querySelector('.apply-filter-btn');
                    const clearFilterBtn = document.querySelector('.clear-filter-btn');
                    const filterModal = document.getElementById('filterModal');

                    function getSelectedFilters() {
                        const filters = {};

                        // Get selected brands
                        const selectedBrands = Array.from(filterModal.querySelectorAll('.filter-group-item:nth-child(1) .option-btn.selected'))
                            .map(btn => btn.textContent.trim());
                        if (selectedBrands.length > 0) filters.brands = selectedBrands.join(',');

                        // Get price range from selected buttons first
                        const selectedPriceBtn = filterModal.querySelector('.price-grid .option-btn.selected');
                        if (selectedPriceBtn) {
                            const priceText = selectedPriceBtn.textContent.trim();
                            if (priceText.startsWith('Dưới')) {
                                filters.maxPrice = 2000000;
                            } else if (priceText.startsWith('Trên')) {
                                filters.minPrice = 20000000;
                            } else if (priceText.includes('Từ')) {
                                const parts = priceText.replace(/Từ|triệu/g, '').trim().split('-');
                                if (parts.length === 2) {
                                    filters.minPrice = parseInt(parts[0].trim()) * 1000000;
                                    filters.maxPrice = parseInt(parts[1].trim()) * 1000000;
                                }
                            }
                        } else {
                            // If no button is selected, get price from slider
                            const priceSlider = document.querySelector('.slider-range');
                            if (priceSlider.noUiSlider) {
                                const prices = priceSlider.noUiSlider.get();
                                const minPrice = prices[0];
                                const maxPrice = prices[1];

                                // Only add to filter if they are not the default full range
                                if (minPrice > 0) {
                                    filters.minPrice = minPrice;
                                }
                                if (maxPrice < 64000000) {
                                    filters.maxPrice = maxPrice;
                                }
                            }
                        }

                        // Get selected categories
                        const selectedCategories = Array.from(filterModal.querySelectorAll('.filter-group-item:nth-child(3) .option-btn.selected'))
                            .map(btn => btn.textContent.trim());
                        if (selectedCategories.length > 0) filters.categories = selectedCategories.join(',');

                        // Get selected RAM
                        const selectedRam = Array.from(filterModal.querySelectorAll('.filter-group-item:nth-child(4) .option-btn.selected'))
                            .map(btn => btn.textContent.trim());
                        if (selectedRam.length > 0) filters.ram = selectedRam.join(',');

                        // Get selected Storage
                        const selectedStorage = Array.from(filterModal.querySelectorAll('.filter-group-item:nth-child(5) .option-btn.selected'))
                            .map(btn => btn.textContent.trim());
                        if (selectedStorage.length > 0) filters.storage = selectedStorage.join(',');

                        // Get selected Battery
                        const selectedBattery = Array.from(filterModal.querySelectorAll('.filter-group-item:nth-child(6) .option-btn.selected'))
                            .map(btn => btn.textContent.trim());
                        if (selectedBattery.length > 0) filters.battery = selectedBattery.join(',');

                        return filters;
                    }

                    if (applyFilterBtn) {
                        applyFilterBtn.addEventListener('click', function () {
                            const filters = getSelectedFilters();
                            const queryParams = new URLSearchParams(filters);
                            const queryString = queryParams.toString();

                            // Redirect to the shop page with filter query parameters
                            window.location.href = `/shop?${queryString}`;
                        });
                    }

                    if (clearFilterBtn) {
                        clearFilterBtn.addEventListener('click', function () {
                            // Redirect to the shop page without any filters
                            window.location.href = '/shop';
                        });
                    }

                    // Handle brand filter buttons outside the modal
                    const brandFilterButtons = document.querySelectorAll('.filter-btn.brand-filter');
                    brandFilterButtons.forEach(button => {
                        button.addEventListener('click', function () {
                            const brandName = this.textContent.trim();
                            const currentParams = new URLSearchParams(window.location.search);
                            currentParams.set('brands', brandName);
                            // Clear other filters when a specific brand is clicked from the top bar
                            ['categories', 'minPrice', 'maxPrice', 'ram', 'storage', 'battery'].forEach(key => currentParams.delete(key));

                            window.location.href = `/shop?${currentParams.toString()}`;
                        });
                    });

                    // *** NEW: Function to update UI based on URL parameters ***
                    function updateFiltersFromURL() {
                        const currentParams = new URLSearchParams(window.location.search);

                        // Update brand filters
                        const brands = currentParams.get('brands');
                        if (brands) {
                            const brandList = brands.split(',');
                            // Update modal buttons
                            filterModal.querySelectorAll('.filter-group-item:nth-child(1) .option-btn').forEach(btn => {
                                if (brandList.includes(btn.textContent.trim())) {
                                    btn.classList.add('selected');
                                }
                            });
                            // Update top bar buttons
                            document.querySelectorAll('.filter-btn.brand-filter').forEach(btn => {
                                if (brandList.includes(btn.textContent.trim())) {
                                    btn.classList.add('active');
                                } else {
                                    btn.classList.remove('active');
                                }
                            });
                        }

                        // Update price slider
                        const minPrice = currentParams.get('minPrice');
                        const maxPrice = currentParams.get('maxPrice');
                        const priceSlider = document.querySelector('.slider-range');
                        if (priceSlider && priceSlider.noUiSlider && (minPrice || maxPrice)) {
                            priceSlider.noUiSlider.set([minPrice || 0, maxPrice || 64000000]);
                        }

                        // Update other filters (Category, RAM, Storage, Battery)
                        const filterMappings = {
                            categories: 3,
                            ram: 4,
                            storage: 5,
                            battery: 6
                        };

                        for (const [param, childIndex] of Object.entries(filterMappings)) {
                            const value = currentParams.get(param);
                            if (value) {
                                const valueList = value.split(',');
                                filterModal.querySelectorAll(`.filter-group-item:nth-child(${childIndex}) .option-btn`).forEach(btn => {
                                    if (valueList.some(val => btn.textContent.trim().includes(val))) {
                                        btn.classList.add('selected');
                                    }
                                });
                            }
                        }
                    }

                    // Call the function to set the initial state of filters on page load
                    updateFiltersFromURL();
                });
            </script>
</body>

