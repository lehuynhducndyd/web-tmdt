<div class="container-fluid fixed-top px-0 wow fadeIn" data-wow-delay="0.1s">
    <div class="container topbar bg-primary d-none d-lg-block">
        <div class="d-flex justify-content-between">
            <div class="top-info ps-2">
                <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#"
                        class="text-white">Cần Thơ</a></small>
                <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">
                        <%= user ? `Xin chào ${user.name}` : 'Vui lòng đăng nhập' %>
                    </a></small>
            </div>
            <div class="top-link pe-2">
                <small class="text-white mx-2">123 Đường ABC, Ninh Kiều, TP. Cần Thơ</small>
            </div>
        </div>
    </div>

    <div class="container px-0">
        <nav class="navbar navbar-light bg-white navbar-expand-xl shadow-sm" style="position: relative; padding: 10px;">
            <a href="/" class="navbar-brand ps-3">
                <h1 class="text-primary display-6">Tripple D Shop</h1>
            </a>

            <button class="navbar-toggler py-2 px-3 me-3" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-primary"></span>
            </button>

            <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a href="/" class="nav-item nav-link active">Trang chủ</a>
                    <a href="/shop" class="nav-item nav-link">Cửa hàng</a>
                    <a href="/contact" class="nav-item nav-link">Liên hệ</a>
                    <% if (user && (user.role==='admin' || user.role==='staff' )) { %>
                        <a class="nav-item nav-link text-warning fw-bold" href="/admin">Trang quản trị</a>
                        <% } %>
                </div>

                <div class="d-flex m-3 me-0 align-items-center justify-content-center pb-3 pb-xl-0">
                    <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4"
                        data-bs-toggle="modal" data-bs-target="#searchModal"><i
                            class="fas fa-search text-primary"></i></button>

                    <a href="/cart" class="position-relative me-4 my-auto text-dark">
                        <i class="fa fa-shopping-bag fa-2x"></i>
                        <span
                            class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1"
                            style="top: -5px; left: 15px; height: 20px; min-width: 20px; font-size: 12px; font-weight: bold;">
                            <%= typeof sum !=='undefined' ? sum : 0 %>
                        </span>
                    </a>

                    <div class="dropdown my-auto">
                        <a href="#" class="dropdown-toggle user-icon-link" role="button" id="dropdownMenuLink"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user fa-2x"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end custom-dropdown shadow"
                            aria-labelledby="dropdownMenuLink">
                            <% if(user){ %>
                                <li class="user-info-header text-center p-3 bg-light border-bottom mb-2">
                                    <div class="fw-bold text-primary mb-1">
                                        <%= user.name %>
                                    </div>
                                    <small class="text-muted">
                                        <%= user.email %>
                                    </small>
                                </li>
                                <li><a class="dropdown-item py-2" href="/user-info"><i class="fas fa-id-card me-2"></i>
                                        Quản lý thông tin cá nhân</a></li>
                                <li><a class="dropdown-item py-2" href="/history"><i class="fas fa-history me-2"></i>
                                        Lịch sử đơn hàng</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <form method="post" action="/logout" class="m-0"><button
                                            class="dropdown-item py-2 text-danger"><i
                                                class="fas fa-sign-out-alt me-2"></i> Đăng xuất</button></form>
                                </li>
                                <% } else { %>
                                    <li class="text-center p-3 bg-light border-bottom mb-2"><span class="fw-bold">Tài
                                            khoản</span></li>
                                    <li>
                                        <form method="get" action="/login" class="m-0"><button
                                                class="dropdown-item py-2"><i class="fas fa-sign-in-alt me-2"></i> Đăng
                                                nhập</button></form>
                                    </li>
                                    <li>
                                        <form method="get" action="/register" class="m-0"><button
                                                class="dropdown-item py-2"><i class="fas fa-user-plus me-2"></i> Đăng
                                                ký</button></form>
                                    </li>

                                    <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title">Tìm kiếm sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="input-group">
                    <input type="text" class="form-control p-3" id="searchInput" placeholder="Nhập tên sản phẩm...">
                </div>
                <div id="searchResults" class="mt-3"></div>
            </div>
        </div>
    </div>
</div>

<style>
    /* 1. Đảm bảo User Dropdown hiển thị tốt (code cũ) */
    .dropdown-toggle::after {
        display: none;
    }

    .custom-dropdown {
        border: none;
        border-radius: 8px;
        margin-top: 10px !important;
        min-width: 280px;
        overflow: hidden;
    }

    @media (max-width: 576px) {
        .custom-dropdown {
            position: fixed !important;
            top: 80px !important;
            left: 50% !important;
            transform: translateX(-50%) !important;
            width: 90vw;
            max-width: 350px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3) !important;
            z-index: 9999;
        }
    }

    /* 2. LOGIC QUAN TRỌNG CHO NAVBAR MOBILE (Overlay) */
    /* Áp dụng cho màn hình nhỏ hơn điểm ngắt navbar-expand-xl (1200px) */
    @media (max-width: 1199.98px) {
        #navbarCollapse {
            position: absolute;
            top: 100%;
            /* Đẩy menu xuống ngay dưới thanh navbar */
            left: 0;
            right: 0;
            background-color: #ffffff;
            z-index: 1000;
            /* Đảm bảo nằm trên các nội dung khác */
            box-shadow: 0 15px 15px rgba(0, 0, 0, 0.05);
            /* Tạo bóng đổ để tách biệt */
            border-top: 1px solid #eee;

            /* Cho phép cuộn bên trong menu nếu menu quá dài */
            max-height: 80vh;
            overflow-y: auto;
            padding-bottom: 20px;
        }

        /* Canh chỉnh lại các item bên trong cho đẹp */
        .navbar-nav .nav-link {
            padding: 12px 20px;
            border-bottom: 1px dashed #f0f0f0;
        }

        /* Đảm bảo thanh navbar chính luôn có nền trắng để không bị xuyên thấu */
        .navbar {
            background-color: #fff !important;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');
        searchInput.addEventListener('input', function () {
            const query = this.value;
            if (query.length < 2) { searchResults.innerHTML = ''; return; }
            fetch(`/search?q=${encodeURIComponent(query)}`).then(r => r.json()).then(products => {
                let html = '<ul class="list-group">';
                if (products.length > 0) products.forEach(p => { html += `<a href="/shop-detail/${p._id}" class="list-group-item list-group-item-action">${p.name}</a>`; });
                else html += '<li class="list-group-item">Không tìm thấy.</li>';
                html += '</ul>'; searchResults.innerHTML = html;
            }).catch(e => console.error(e));
        });
    });
</script>