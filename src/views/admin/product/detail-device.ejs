<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Device</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>
        <div id="layoutSidenav">
            <%- include('../layout/sidenav'); -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Edit Device</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/admin/product">Devices</a></li>
                                <li class="breadcrumb-item active">
                                    <%= device.name %>
                                </li>
                            </ol>
                            <div class="row">
                                <div class="col-6 mx-auto">
                                    <h5>View detail device</h5>
                                    <form action="/admin/update-device/<%= device._id %>" method="POST"
                                        enctype="multipart/form-data">
                                        <!-- Basic info -->
                                        <div class="mb-3">
                                            <label class="form-label">Name</label>
                                            <input type="text" class="form-control" name="name"
                                                value="<%= device.name %>" required>
                                        </div>
                                        <div class="row">
                                            <div class="col-6 mb-3">
                                                <label class="form-label">Brand</label>
                                                <select name="brand" class="form-select">
                                                    <% brands.forEach(brand=> { %>
                                                        <option value="<%= brand._id %>"
                                                            <%=device.brand?.toString()===brand._id.toString()
                                                            ? 'selected' : '' %>>
                                                            <%= brand.name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <label class="form-label">Category</label>
                                                <select name="category" class="form-select">
                                                    <% categories.forEach(cat=> { %>
                                                        <option value="<%= cat._id %>"
                                                            <%=device.category?.toString()===cat._id.toString()
                                                            ? 'selected' : '' %>><%= cat.name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Description</label>
                                            <textarea class="form-control" rows="3"
                                                name="description"><%= device.description %></textarea>
                                        </div>


                                        <!-- Thumbnail -->
                                        <div class="mb-3">
                                            <label class="form-label">Thumbnail</label>
                                            <input type="file" class="form-control" name="thumbnail" accept="image/*"
                                                onchange="previewImage(event, 'thumbnail-preview')">
                                            <div class="mt-2">
                                                <img id="thumbnail-preview"
                                                    src="data:<%= device.thumbnail?.contentType %>;base64,<%= device.thumbnail?.data?.toString('base64') %>"
                                                    class="img-fluid rounded"
                                                    style="max-height:150px; <%= device.thumbnail ? '' : 'display:none;' %>">
                                            </div>
                                        </div>

                                        <!-- Images -->
                                        <div class="mb-3">
                                            <label class="form-label">Images</label>
                                            <input type="file" class="form-control" name="images" accept="image/*"
                                                multiple multiple
                                                onchange="previewMultipleImages(event, 'images-preview')">
                                            <div id="images-preview" class="d-flex flex-wrap gap-2 mt-2">
                                                <% if (device.images && device.images.length) { %>
                                                    <% device.images.forEach(img=> { %>
                                                        <img src="data:<%= img.contentType %>;base64,<%= img.data.toString('base64') %>"
                                                            class="img-fluid rounded"
                                                            style="max-height:100px;object-fit:cover;">
                                                        <% }) %>
                                                            <% } %>
                                            </div>
                                        </div>

                                        <!-- Specs -->
                                        <h5>Specifications</h5>
                                        <div class="row">
                                            <div class="col-4 mb-3">
                                                <label class="form-label">Screen</label>
                                                <input type="text" class="form-control" name="specs[screen]"
                                                    value="<%= device.specs?.screen %>">
                                            </div>
                                            <div class="col-4 mb-3">
                                                <label class="form-label">CPU</label>
                                                <input type="text" class="form-control" name="specs[cpu]"
                                                    value="<%= device.specs?.cpu %>">
                                            </div>
                                            <div class="col-4 mb-3">
                                                <label class="form-label">Battery</label>
                                                <input type="text" class="form-control" name="specs[battery]"
                                                    value="<%= device.specs?.battery %>">
                                            </div>
                                            <div class="col-6 mb-3">
                                                <label class="form-label">Camera</label>
                                                <input type="text" class="form-control" name="specs[camera]"
                                                    value="<%= device.specs?.camera %>">
                                            </div>
                                            <div class="col-6 mb-3">
                                                <label class="form-label">OS</label>
                                                <input type="text" class="form-control" name="specs[os]"
                                                    value="<%= device.specs?.os %>">
                                            </div>
                                        </div>



                                        <div class="mb-3">
                                            <button type="submit" class="btn btn-primary">Update
                                                Device</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-6 mx-auto">
                                    <h5>Variants</h5>
                                    <a href="/admin/create-variant/<%=device.id%>"
                                        class="btn btn-warning mb-3">Create</a>
                                    <%- include('../layout/variantTable'); -%>
                                </div>
                            </div>

                        </div>
                    </main>
                    <%- include('../layout/footer'); -%>
                </div>
        </div>

        <!-- JS -->
        <script>


            // Preview ảnh 1 file
            function previewImage(event, previewId) {
                const input = event.target;
                const preview = document.getElementById(previewId);
                if (input.files && input.files[0]) {
                    const reader = new FileReader();
                    reader.onload = e => {
                        preview.src = e.target.result;
                        preview.style.display = "block";
                    };
                    reader.readAsDataURL(input.files[0]);
                }
            }

            // Preview nhiều ảnh
            function previewMultipleImages(event, containerId) {
                const container = document.getElementById(containerId);
                container.innerHTML = "";
                Array.from(event.target.files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = e => {
                        const img = document.createElement("img");
                        img.src = e.target.result;
                        img.classList.add("img-fluid", "rounded");
                        img.style.maxHeight = "100px";
                        img.style.marginRight = "8px";
                        container.appendChild(img);
                    };
                    reader.readAsDataURL(file);
                });
            }
        </script>
</body>

</html>