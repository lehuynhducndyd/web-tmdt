<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Điện thoại</th>
            <th>Địa chỉ</th>
            <th>Hoạt động</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        <% if (users && users.length> 0) { %>
            <% users.forEach(function(user){ %>
                <tr>
                    <td style="color: <%= user.isActive ? 'green' : 'red' %>;">
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <% const roleKey=Object.keys(ROLE_TYPES).find(key=> ROLE_TYPES[key].value === user.role); %>
                            <% if (roleKey) { %>
                                <%= ROLE_TYPES[roleKey].label %>
                                    <% } else { %>
                                        <%= user.role %>
                                            <% } %>
                    </td>
                    <td>
                        <%= user.phone %>
                    </td>
                    <td>
                        <%= user.street %>, <%= user.commune %>, <%= user.province %>
                    </td>
                    <td>
                        <%= user.isActive ? 'Có' : 'Không' %>
                    <td>
                        <div class="d-flex gap-2">
                            <form action="/admin/delete-user/<%= user.id %>" method="post">
                                <button class="btn btn-danger btn-sm" type="submit"
                                    onclick="return confirm('Bạn có chắc chắn muốn xóa user <%= user.name %> không?')">
                                    Xóa
                                </button>
                            </form>
                            <form action="/admin/view-user/<%= user.id %>" method="get">
                                <button class="btn btn-warning btn-sm" type="submit">Xem & Sửa</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center text-muted">Không tìm thấy người dùng</td>
                        </tr>
                        <% } %>
    </tbody>
</table>