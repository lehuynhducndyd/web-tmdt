<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" />
    <title>Thống kê doanh thu</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>
        <div id="layoutSidenav">
            <%- include('../layout/sidenav'); -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Thống kê doanh thu</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
                                <li class="breadcrumb-item active">Thống kê doanh thu</li>
                            </ol>
                            <hr>

                            <div class="row">
                                <div class="col-xl-6">
                                    <div class="card bg-info text-white mb-4">
                                        <div class="card-body">
                                            <h5>Doanh thu hôm nay</h5>
                                            <h3 class="fw-bold">
                                                <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                                    }).format(todayRevenue) %>
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="card bg-primary text-white mb-4">
                                        <div class="card-body">
                                            <h5>Doanh thu tháng này</h5>
                                            <h3 class="fw-bold">
                                                <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                                    }).format(thisMonthRevenue) %>
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-filter me-1"></i>
                                    Lọc doanh thu theo tháng
                                </div>
                                <div class="card-body">
                                    <form action="/admin/revenue-stat" method="get" class="row mb-3 align-items-end">
                                        <div class="col-md-3">
                                            <label for="month-filter" class="form-label">Chọn tháng</label>
                                            <select id="month-filter" name="month" class="form-select">
                                                <% for(let m=1; m <=12; m++) { %>
                                                    <option value="<%= m %>" <%=m===selectedMonth ? 'selected' : '' %>>
                                                        Tháng <%= m %>
                                                    </option>
                                                    <% } %>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="year-filter" class="form-label">Chọn năm</label>
                                            <select id="year-filter" name="year" class="form-select">
                                                <% const currentYear=new Date().getFullYear(); for (let y=currentYear;
                                                    y>= 2022; y--) { %>
                                                    <option value="<%= y %>" <%=y===selectedYear ? 'selected' : '' %>>
                                                        <%= y %>
                                                    </option>
                                                    <% } %>
                                            </select>

                                        </div>
                                        <div class="col-md-2">
                                            <button type="submit" class="btn btn-primary w-100">Xem</button>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="">
                                                <h5 class="">Tổng doanh thu: <span class="text-success fw-bold">
                                                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency' ,
                                                            currency: 'VND' }).format(monthlyData.totalRevenue) %>
                                                    </span></h5>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div class="row">
                                <div>
                                    <div class="card mb-4">
                                        <div class="card-header"><i class="fas fa-chart-bar me-1"></i>Doanh thu các
                                            tháng trong năm <%= selectedYear %>
                                        </div>
                                        <div class="card-body"><canvas id="monthlyRevenueChart" width="100%"
                                                height="320"></canvas></div>
                                    </div>
                                </div>
                                <div>
                                    <div class="card mb-4">
                                        <div class="card-header"><i class="fas fa-chart-bar me-1"></i>Doanh thu các ngày
                                            trong tháng <%= selectedMonth %>/<%= selectedYear %>
                                        </div>
                                        <div class="card-body"><canvas id="dailyRevenueChart" width="100%"
                                                height="320"></canvas></div>
                                    </div>
                                </div>
                            </div>

                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-table me-1"></i>
                                    Chi tiết doanh thu theo ngày
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Ngày</th>
                                                    <th>Doanh thu</th>
                                                </tr>
                                            </thead>
                                            <tbody id="revenueTableBody">
                                                <% if (monthlyData.dailyData.length> 0) { %>
                                                    <% monthlyData.dailyData.forEach(item=> { %>
                                                        <tr>
                                                            <td>
                                                                <%= item.day %>/<%= item.month %>/<%= item.year %>
                                                            </td>
                                                            <td>
                                                                <%= new Intl.NumberFormat('vi-VN', { style: 'currency' ,
                                                                    currency: 'VND' }).format(item.revenue) %>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="2" class="text-center">Không có dữ liệu
                                                                    </td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
        </div>
        <%- include('../layout/footer'); -%>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
                crossorigin="anonymous"></script>
            <script src="/admin/js/scripts.js"></script>
            <textarea id="yearlyData-storage" style="display:none;">
    <%= JSON.stringify(yearlyData || {}) %>
</textarea>

            <textarea id="monthlyData-storage" style="display:none;">
    <%= JSON.stringify(monthlyData || {}) %>
</textarea>
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    try {
                        console.log("--- BẮT ĐẦU VẼ BIỂU ĐỒ (CÁCH MỚI) ---");

                        // --- BƯỚC 2: ĐỌC DỮ LIỆU TỪ HTML (KHÔNG DÙNG EJS TRONG JS) ---

                        // 1. Lấy nội dung chuỗi từ thẻ textarea ẩn
                        const yearlyString = document.getElementById('yearlyData-storage').value.trim();
                        const monthlyString = document.getElementById('monthlyData-storage').value.trim();

                        // 2. Chuyển đổi từ Chuỗi JSON sang Object (Parse)
                        // Nếu chuỗi rỗng, fallback về object rỗng {}
                        const rawYearly = yearlyString ? JSON.parse(yearlyString) : {};
                        const rawMonthly = monthlyString ? JSON.parse(monthlyString) : {};

                        console.log("Dữ liệu sau khi Parse:", { rawYearly, rawMonthly });

                        // --- BƯỚC 3: XỬ LÝ DỮ LIỆU ---
                        const yearlyRevenueList = rawYearly.monthlyRevenues || [];
                        const dailyRevenueList = rawMonthly.dailyData || [];

                        const selectedYear = <%= selectedYear %>;
                        const selectedMonth = <%= selectedMonth %>;

                        // --- XỬ LÝ DỮ LIỆU CHO BIỂU ĐỒ NGÀY ---
                        // 1. Lấy số ngày trong tháng
                        const daysInMonth = new Date(selectedYear, selectedMonth, 0).getDate();

                        // 2. Tạo mảng dữ liệu đầy đủ cho các ngày trong tháng, mặc định doanh thu là 0
                        const fullDailyData = Array.from({ length: daysInMonth }, (_, i) => {
                            const day = i + 1;
                            return {
                                label: `${day}/${selectedMonth}`,
                                revenue: 0
                            };
                        });

                        // 3. Cập nhật doanh thu từ dữ liệu thực tế
                        dailyRevenueList.forEach(item => {
                            if (item.day - 1 < fullDailyData.length) {
                                fullDailyData[item.day - 1].revenue = item.revenue;
                            }
                        });

                        // Tạo mảng Labels và Data
                        const monthlyLabels = yearlyRevenueList.map(d => `Tháng ${d.month}`);
                        const monthlyRevenues = yearlyRevenueList.map(d => d.revenue);

                        // --- BƯỚC 4: CẤU HÌNH CHART ---
                        const chartOptions = {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        beginAtZero: true,
                                        callback: function (value) {
                                            return new Intl.NumberFormat('vi-VN').format(value) + ' đ';
                                        }
                                    }
                                }]
                            },
                            tooltips: {
                                callbacks: {
                                    label: function (tooltipItem, data) {
                                        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(tooltipItem.yLabel);
                                    }
                                }
                            }
                        };

                        // --- BƯỚC 5: VẼ BIỂU ĐỒ ---

                        // Vẽ Chart Năm
                        const ctxMonthly = document.getElementById("monthlyRevenueChart");
                        if (ctxMonthly && yearlyRevenueList.length > 0) {
                            new Chart(ctxMonthly, {
                                type: 'bar',
                                data: {
                                    labels: monthlyLabels,
                                    datasets: [{
                                        label: "Doanh thu năm",
                                        backgroundColor: "rgba(2,117,216,1)",
                                        data: monthlyRevenues,
                                    }]
                                },
                                options: chartOptions
                            });
                        }

                        // Vẽ Chart Tháng
                        const ctxDaily = document.getElementById("dailyRevenueChart");
                        if (ctxDaily && dailyRevenueList.length > 0) {
                            new Chart(ctxDaily, {
                                type: 'bar',
                                data: {
                                    labels: fullDailyData.map(d => d.label),
                                    datasets: [{
                                        label: "Doanh thu ngày",
                                        backgroundColor: "rgba(0, 123, 255, 0.7)",
                                        data: fullDailyData.map(d => d.revenue),
                                    }]
                                },
                                options: chartOptions
                            });
                        }

                    } catch (error) {
                        console.error("Lỗi khi xử lý biểu đồ:", error);
                    }
                });
            </script>
</body>

</html>