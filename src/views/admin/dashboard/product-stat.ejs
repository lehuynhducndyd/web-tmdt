<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" />
    <title>Thống kê sản phẩm</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>
        <div id="layoutSidenav">
            <%- include('../layout/sidenav'); -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Thống kê sản phẩm</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
                                <li class="breadcrumb-item active">Thống kê sản phẩm</li>
                            </ol>
                            <hr>

                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-bar me-1"></i>
                                    Top 5 sản phẩm bán chạy nhất
                                </div>
                                <div class="card-body">
                                    <table class="table table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Ảnh</th>
                                                <th>Tên sản phẩm</th>
                                                <th>Số lượng đã bán</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (bestSellingProducts && bestSellingProducts.length> 0) { %>
                                                <% bestSellingProducts.forEach((product, index)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td><img src="<%= product.thumbnail.data ? `data:${product.thumbnail.contentType};base64,${product.thumbnail.data.toString('base64')}` : '/images/placeholder.png' %>"
                                                                alt="<%= product.name %>" width="50"></td>
                                                        <td>
                                                            <%= product.name %>
                                                        </td>
                                                        <td>
                                                            <%= product.totalQuantity %>
                                                        </td>
                                                        <td><a class="btn btn-primary btn-sm"
                                                                href="/shop-detail/<%= product._id %>"
                                                                target="_blank">Xem</a></td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="5" class="text-center text-muted">Chưa có
                                                                    dữ liệu sản phẩm bán chạy.</td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Sản phẩm sắp hết hàng (Tồn kho ít hơn 2 sản phẩm)
                                </div>
                                <div class="card-body">
                                    <table class="table table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Sản phẩm</th>
                                                <th>Màu sắc</th>
                                                <th>RAM</th>
                                                <th>Dung lượng</th>
                                                <th>Tồn kho</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (outOfStockProducts && outOfStockProducts.length> 0) { %>
                                                <% outOfStockProducts.forEach(variant=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= variant.product ? variant.product.name : 'N/A' %>
                                                        </td>
                                                        <td>
                                                            <%= variant.color %>
                                                        </td>
                                                        <td>
                                                            <%= variant.ram || 'N/A' %>
                                                        </td>
                                                        <td>
                                                            <%= variant.storage || 'N/A' %>
                                                        </td>
                                                        <td><span class="badge bg-danger">
                                                                <%= variant.stock %>
                                                            </span></td>
                                                        <td>
                                                            <% const viewUrl=variant.productType==='Device'
                                                                ? '/admin/view-device/' : '/admin/view-accessory/' ; %>
                                                                <a class="btn btn-warning btn-sm"
                                                                    href="<%= viewUrl %><%= variant.product ? variant.product._id : '' %>"
                                                                    target="_blank">Sửa kho</a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="6" class="text-center text-muted">Không có
                                                                    sản phẩm nào hết hàng.</td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>

                    </main>
                    <%- include('../layout/footer'); -%>
                </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>

</body>

</html>